// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-;": ["projects::OpenRecent", { "create_new_window": true }],
      "ctrl-escape": ["workspace::ActivatePane", 0],
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown",
      "alt-x": "command_palette::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-;": ["projects::OpenRecent", { "create_new_window": true }]
    }
  },
  {
    "context": "(not_editing || (Editor && vim_mode == normal)) && !menu",
    "bindings": {
      "space g j": ["task::Spawn", { "task_name": "jj", "reveal_target": "center" }],
      "space ;": ["projects::OpenRecent", { "create_new_window": true }],
      "space .": "pane::RevealInProjectPanel",
      "space space": "file_finder::Toggle",
      "space ,": "tab_switcher::Toggle",
      "space :": "command_palette::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      // "j k": "vim::SwitchToNormalMode"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal",
      "ctrl-w ctrl-w": ["terminal::SendKeystroke", "ctrl-w"]
    }
  }
]
